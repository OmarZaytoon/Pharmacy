<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingStart="10dp">


        <ImageView
            android:id="@+id/product_img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cart_product"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/product_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#111"
            android:textSize="20sp"
            android:text="Product Name"
            android:layout_toEndOf="@+id/product_img1"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/deals_price_one1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$30.00"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/product_name1"
            android:layout_toEndOf="@+id/product_img1"
            android:textSize="20sp"
            android:textColor="#E91E63"/>
        <TextView
            android:id="@+id/deals_price_two1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/strike_text"
            android:layout_margin="5dp"
            android:layout_below="@+id/product_name1"
            android:layout_toEndOf="@+id/deals_price_one1"
            android:textSize="20sp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deals_price_two1"
            android:layout_toEndOf="@+id/product_img1"
            android:background="@drawable/rate_borders_layout"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:gravity="center"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_rate_star"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#fff"
            android:padding="7dp"
            android:background="@drawable/deals_discount_border"
            android:layout_alignParentRight="true"
            android:text="40% OFF"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>