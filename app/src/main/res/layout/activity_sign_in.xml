<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".avtivities.SignIn">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >
        <EditText
            android:id="@+id/SignIn_et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:drawableTint="#FF4956"
            android:padding="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:drawableEnd="@drawable/user"
            android:background="@drawable/edittext_borders_layout"

            />
        <EditText
            android:id="@+id/SignIn_et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:padding="15dp"
            android:layout_margin="20dp"
            android:drawableTint="#FF4956"
            android:drawableEnd="@drawable/password"
            android:background="@drawable/edittext_borders_layout" />
        <Button
            android:id="@+id/SignIn_btn_signin"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:layout_marginTop="100dp"
            android:background="@drawable/buttons_borders_layout"
            android:layout_marginBottom="15dp"
            android:layout_margin="20dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/SignIn_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_margin="20dp">
        <TextView
            android:id="@+id/SignIn_tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not a member ?"
            android:textSize="20sp"
            android:textColor="#111"
            android:layout_margin="10dp"
            />
        <TextView
            android:id="@+id/SignIn_tv_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="20sp"
            android:textColor="#FF4956"
            android:layout_margin="10dp"
            />


    </LinearLayout>

</RelativeLayout>