<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/circle_big"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/ic_circle"
        android:layout_centerInParent="true"
       />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_circle"

        android:layout_toEndOf="@+id/slide_layout_img"
        android:layout_centerVertical="true"

        />
    <ImageView
        android:id="@+id/slide_layout_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/onboarding_one" />
    <TextView
        android:id="@+id/slide_layout_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/actor"
        android:text="Choose your wash programme via the app"
        android:textSize="30sp"
        android:layout_below="@+id/circle_big"
        android:gravity="center"
        />

</RelativeLayout>